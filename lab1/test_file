pipeline {
    agent any
    environment {
        RELEASE='10.01'
        
    }
    stages {
    stage('Build') {
        agent any 
        environment {
            LOG_LEVEL='INFO'
        }
        steps {
            echo "Building release ${RELEASE} with log level ${LOG_LEVEL}"
            }
    }
        
    stage ('Test'){

        steps{
            echo "Testing release ${RELEASE} with log level"
            }
    }
        
    stage ('Deploy') {
            // Provide input block which will prompt to take input from user manually.
            input {
                message 'Deploy?'
                ok 'Do it !'
                parameters {
                    string (name: 'TARGET_ENVIRONMENT', defaultValue: 'PROD', description: 'Target environment deployment')
                    }
                }
            steps{
                echo "Deploying relase ${RELEASE}, to target environment ${TARGET_ENVIRONMENT}."
            }

        }

    }
}
        